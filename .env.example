# ===== REQUIRED =====
# User and Group ID for file permissions
PUID=1000
PGID=1000

# ===== NETWORK SETTINGS =====
DEFAULT_PORT=17777
QUERY_PORT=27015
# Optional: Bind to specific IP
MULTIHOME=

# ===== SERVER SETTINGS =====
SERVER_NAME=My Icarus Server
MAX_PLAYERS=8
UPDATE_ON_START=true

# ===== PROSPECT MANAGEMENT =====
# Automatically resume last prospect on startup (true/false)
# RESUME_PROSPECT=true

# Load a specific prospect on startup (prospect name from Saved/PlayerData/DedicatedServer/Prospects/)
# LOAD_PROSPECT=MyProspectName

# Create and launch a new prospect on startup
# Format: "ProspectType Difficulty Hardcore SaveName"
# Example: "Tier1_Forest_Recon_0 3 false MyProspect"
# Difficulty: 1 (easy) to 4 (extreme), Hardcore: true/false
# CREATE_PROSPECT="Tier1_Forest_Recon_0 2 false TestServer"

# ===== ADVANCED OPTIONS =====
# Custom base directory for Saved/ files (relative or absolute path)
# Leave empty to use the default server-data volume
# USER_DIR=

# Append suffix to Saved/ directory name
# SAVED_DIR_SUFFIX=

# Custom log path relative to Saved/Logs/
# LOG_PATH=

# Absolute log path (may require elevated permissions)
# ABS_LOG_PATH=
